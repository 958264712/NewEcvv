@media (min-width: 1024px) {
  body {
    width: 100%;
    display: flex;
    place-items: center;
    background: #f8f8f8;
    font: 14px/1.5 Roboto, Helvetica, Tahoma, Arial, "Microsoft YaHei";
  }

  #app {
    width: 100%;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
  }
}

.el-row {
  display: flex;
  flex-wrap: wrap;
  position: relative;
  box-sizing: border-box;
}

.el-pagination {
  display: flex;
  margin: 10px 0 ;
  align-items: center;
  >span:first-child {
    text-align: left;
  }

  .el-input__wrapper {
    display: flex;
    justify-content: space-around;
    width: 177px;
    margin: 0 10px;
  }
  .el-input__inner{
    display: inline-block;
    width: 156px;
  }
  .el-input__suffix {
    display: inline-block;
    width: 21px;
    padding-top: 5px;
    border: 1px solid #000;
    border-left: 0;
    background-color: #fff;
  }
.btn-prev,.btn-next{
  width: 32px;
  height: 32px;
}
.el-pager{
  padding: 0;
  display: flex;
  margin: 0 10px;
  .number{
    width: 32px;
    height: 32px;
    line-height: 32px;
    text-align: center;
    border: 1px solid #888;
    color: #000;
  }
  .is-active{
    border: 1px solid #004b91;
    background-color: #004b91;
    color: #fff;
  }
}
.el-pagination__jump {
  display: flex;
  margin: 0 10px;
  align-items: center;
}
}
.el-scrollbar{
    background-color: #fff;
    .el-scrollbar__view{
      padding:0 20px;
    }
}